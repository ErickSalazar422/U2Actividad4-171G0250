@model IEnumerable< U2Actividad5_171G0250.Models.Clase>
    @{Layout = "_Layout";
}



<div class="slides">
   

    @{Random r = new Random();
        var imag = r.Next(1, 6);
        <img src="~/images/carousel@(imag).jpg">

    }

</div>

    <h1>Clasificación de los vertebrados</h1>

    <div class="clases">
        @foreach (var cla in Model)
        {
            <div>
                <a href="~/Clasificacion/@cla.Nombre">
                    <img src="clases/@(cla.Id).jpg">
                    <h1>@cla.Nombre</h1>
                    <p>@Html.Raw(cla.Descripcion)</p>
                </a>
            </div>

        }


    </div>
